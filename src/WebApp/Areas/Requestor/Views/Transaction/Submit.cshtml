@model Transaction

@{
    ViewData["Title"] = "Confirm Submission";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="card">
            <div class="card-body">
                <div class="form-group row">
                    <label class="col-sm-2 col-xs-12 col-form-label ml-2">Company Name</label>
                    <div class="col-sm-4 col-xs-12">
                        <input asp-for="Company.Name" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-xs-12 col-form-label ml-2">Department</label>
                    <div class="col-sm-4 col-xs-12">
                        <input asp-for="Department.Name" class="form-control" disabled />
                    </div>
                </div>
                <table class="table table-striped">
                    <tr>
                        <th scope="col">
                            EmpCode
                        </th>
                        <th scope="col">
                            Name
                        </th>
                        <th scope="col">
                            Phone No
                        </th>
                        <th scope="col">
                            Address
                        </th>
                    </tr>
                    @foreach (var item in Model.Employees)
                    {
                        <tr>
                            <td scope="col">
                                @item.EmpCode
                            </td>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.PhoneNo
                            </td>
                            <td>
                                @item.Address
                            </td>
                        </tr>
                    }
                </table>
                <a asp-action="SubmitConfirm" asp-controller="Transaction" asp-route-id="@Model.Id" class="btn btn-primary">Submit</a>
            </div>
        </div>
    </div>
</div>
@model IEnumerable<Transaction>

@{
    ViewData["Title"] = "TransactionList";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="card">
            <div class="card-body">
                <table class="table table-bordered custom-table">
                    <thead>
                        <tr>
                            <th>TransactionId</th>
                            <th>Company</th>
                            <th>Department</th>
                            <th colspan="4" class="text-center">Employees</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            int rs = item.Employees.Count;
                            rs++;
                            <tr>
                                <td rowspan="@rs">@item.TransactionId</td>
                                <td rowspan="@rs">@item.Department.Name</td>
                                <td rowspan="@rs">@item.Company.Name</td>
                                <th class="table-info" scope="col">EmpCode</th>
                                <th class="table-info" scope="col">Name</th>
                                <th class="table-info" scope="col">Phone No</th>
                                <th class="table-info" scope="col">Address</th>
                                <td rowspan="@rs">@item.TransactionStatus</td>
                            </tr>
                            foreach (var emp in item.Employees)
                            {
                                <tr>
                                    <td>@emp.EmpCode</td>
                                    <td>@emp.Name</td>
                                    <td>@emp.PhoneNo</td>
                                    <td>@emp.Address</td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
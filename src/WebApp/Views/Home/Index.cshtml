@model LoginViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
            <div class="card-body">
                <h5 class="card-title text-center">Sign In</h5>
                <form asp-area="" asp-controller="Home" asp-action="LoginConfirm" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="control-label">Username</label><span class="text-danger">*</span>
                        <input type="text" asp-for="Email"  class="form-control" placeholder="Username"/>
                        <span  class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Password</label><span class="text-danger">*</span>
                        <input type="password" asp-for="Password" class="form-control" placeholder="Password"/>
                        <span  class="text-danger"></span>
                    </div>
                    <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button>
                </form>
            </div>
        </div>
    </div>
</div>

